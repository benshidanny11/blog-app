<% stylesheet_link_tag 'users/index' %>
<div id="add-new-page" class="flex flex-col items-center gap-16 p-10">
  <h1 class="pb-1">Create a New Post</h1>
  <%= form_with model: post, url: user_posts_path(@user), method: :post, local: true do |form| %>
    <%= form.text_field :title, placeholder: 'Enter Title' %>
    <%= form.text_area :text, rows: 10, placeholder: "Enter post " %>
    <%= form.submit "Submit" %>
  <% end %>
</div>